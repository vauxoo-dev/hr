<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="hr_working_shifts_calendar_resources_inherit">
			<field name="name">Calendar Resources shifts </field>
			<field name="model">resource.calendar</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="resource.resource_calendar_form"/>
			<field name="arch" type="xml">
                <xpath expr='//field[@name="leave_ids"]' position="after">
                	<group string="Basic settings">
                		<field name="least_min"/>
                	</group>
                	<group string="Calculation">
                		<field name="one_workday_as"/>
                		<field name="min_as_late"/>
                		<field name="min_as_early"/>
                		<group colspan="4" col="6" >
                			<field name="noclockin_count_as"/>
                			<field name="noclockin_count_mins" nolabel="1"/>
                		</group>
                		<group colspan="4" col="6" >
                			<field name="noclockout_count_as"/>
                			<field name="noclockout_count_mins" nolabel="1"/>
                		</group>
                		<group colspan="4" col="6" >
                			<field name="as_late_exceed"/>
                			<label string="min, count as absent"/>
                		</group>
                		<group colspan="4" col="6" >
                			<field name="as_early_leave"/>
                			<label string="min, count as absent"/>
                		</group>
                		<group colspan="4" col="4">
                			<field name="inter_leaving_ot"/>
                			<field name="checkout_interval_ot"/>
                		</group>
                		<group colspan="4" col="2">
                			<field name="ot_after_checkout"/>
                		</group>
                		<group colspan="4" col="4">
                			<field name="checkin_count_ot"/>
                			<field name="checkin_interval_ot"/>
                		</group>
                		<group colspan="4" col="2">
                			<field name="ot_defore_checkin"/>
                		</group>
                		<group colspan="4" col="2">
                			<field name="longest_over_time"/>
                		</group>
                	</group>
				</xpath>				
            </field>
		</record>

	</data>
</openerp>